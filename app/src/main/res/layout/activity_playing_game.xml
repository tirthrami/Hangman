<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs321_005.hangman.PlayingGame">

    <Button
        android:text="VOICE"
        android:layout_width="150dp"
        android:layout_marginBottom="33dp"
        android:id="@+id/button_voice"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton" />

    <Button
        android:text="GESTURE"
        android:id="@+id/Gesture"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button_voice"
        android:layout_alignBottom="@+id/button_voice"
        android:layout_alignLeft="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout" />

    <GridLayout
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:id="@+id/gridLayout"
        android:layout_above="@+id/button_voice"
        android:layout_centerHorizontal="true">

        <Button
            android:text="A"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_A" />

        <Button
            android:text="B"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_B" />

        <Button
            android:text="C"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_C" />

        <Button
            android:text="D"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_D" />

        <Button
            android:text="E"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_E" />

        <Button
            android:text="F"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_F" />

        <Button
            android:text="G"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_G" />

        <Button
            android:text="H"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_H" />

        <Button
            android:text="I"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_I" />

        <Button
            android:text="J"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_J" />

        <Button
            android:text="T"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_T"
            android:layout_row="1"
            android:layout_column="9" />

        <Button
            android:text="S"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_S"
            android:layout_row="1"
            android:layout_column="8" />

        <Button
            android:text="R"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_R"
            android:layout_row="1"
            android:layout_column="7" />

        <Button
            android:text="Q"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_Q"
            android:layout_row="1"
            android:layout_column="6" />

        <Button
            android:text="P"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_P"
            android:layout_row="1"
            android:layout_column="5" />

        <Button
            android:text="O"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_O"
            android:layout_row="1"
            android:layout_column="4" />

        <Button
            android:text="N"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_N"
            android:layout_row="1"
            android:layout_column="3" />

        <Button
            android:text="M"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_M"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:text="L"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_L"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:text="K"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_K"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:text="Z"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_Z"
            android:layout_row="2"
            android:layout_column="7" />

        <Button
            android:text="Y"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_Y"
            android:layout_row="2"
            android:layout_column="6" />

        <Button
            android:text="X"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_X"
            android:layout_row="2"
            android:layout_column="5" />

        <Button
            android:text="W"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_W"
            android:layout_row="2"
            android:layout_column="4" />

        <Button
            android:text="V"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_V"
            android:layout_row="2"
            android:layout_column="3" />

        <Button
            android:text="U"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_U"
            android:layout_row="2"
            android:layout_column="2" />

    </GridLayout>

    <TextView
        android:text="WORDS TO BE GUESSED"
        android:id="@+id/textView_guess"
        android:textAlignment="center"
        android:textSize="24sp"
        android:gravity="fill"
        android:layout_centerInParent="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_height="70dp"
        android:layout_width="375dp"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:layout_centerVertical="true"
        android:editable="false"
        tools:editable="false" />

    <ImageView
        android:layout_width="300dp"
        app:srcCompat="@android:drawable/star_big_on"
        android:id="@+id/imageButton"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/NewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Quit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton"
        android:text="New" />

    <Button
        android:id="@+id/Quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_toRightOf="@+id/imageButton"
        android:text="quit" />

</RelativeLayout>
